<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.randymxj.us.bus.countdown.AboutActivity">

    <LinearLayout
        android:id="@+id/layout_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:animateLayoutChanges="true" >

        <ImageView
            android:layout_width="@dimen/about_logo_width"
            android:layout_height="@dimen/about_logo_height"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/item_textsize_title"
            android:singleLine="true"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@color/textColorContent"
            android:textSize="@dimen/item_textsize_content"
            android:singleLine="true"
            android:text="Version"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/item_textsize_title"
            android:singleLine="true"
            android:text="Tracking information provided by"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@color/textColorContent"
            android:textSize="@dimen/item_textsize_content"
            android:singleLine="true"
            android:text="nextbus Public XML Feed"/>

        <TextView
            android:id="@+id/tv_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/item_textsize_title"
            android:singleLine="true"
            android:text="Tracker Usage: "/>

    </LinearLayout>

</RelativeLayout>

