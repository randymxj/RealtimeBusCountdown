<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/card_padding_vertical"
    android:paddingBottom="@dimen/card_padding_vertical"
    android:paddingLeft="@dimen/card_padding_horizontal"
    android:paddingRight="@dimen/card_padding_horizontal"
    android:clipToPadding="false" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_content_bg" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_padding">

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorTitle"
                    android:textSize="@dimen/item_textsize_content"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_item_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorTitle"
                    android:textSize="@dimen/item_textsize_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_item_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorContent"
                    android:textSize="@dimen/item_textsize_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_item_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorContent"
                    android:textSize="@dimen/item_textsize_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardBorder">
            </View>

            <LinearLayout
                android:id="@+id/card_counter_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_padding" >

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardBorder">
            </View>

            <LinearLayout
                android:id="@+id/card_option_view"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp" >

                <Button
                    android:id="@+id/btn_option_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/card_padding_option_button"
                    android:paddingRight="@dimen/card_padding_option_button"
                    android:textSize="@dimen/item_textsize_content"
                    android:singleLine="true"
                    android:background="@drawable/card_button_bg"
                    android:textColor="@color/textColorOption"
                    android:text="@string/refresh"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_option_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/card_padding_option_button"
                    android:paddingRight="@dimen/card_padding_option_button"
                    android:textSize="@dimen/item_textsize_content"
                    android:singleLine="true"
                    android:background="@drawable/card_button_bg"
                    android:textColor="@color/textColorOption"
                    android:text="@string/more"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>